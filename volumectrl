#!/bin/env bash

set -euo pipefail

# Ensure pamixer is installed
if ! command -v pamixer &> /dev/null; then
    echo "Error: pamixer is not installed."
    exit 1
fi

opt="${1:-}"
num="${2:-5}"
status="restatus rt 23"

function volume_inc() {
    pamixer -i "$num"
    $status
}

function volume_dec() {
    pamixer -d "$num"
    $status
}

function volume_togglemute() {
    pamixer --toggle-mute
    $status
}

function help_menu() {
    cat <<EOF
Usage: $(basename "$0") [OPTION]

Options:
    --help, -h           Show this help menu
    --togglemute, -tm    Toggle mute
    --inc, -i            Increase volume by \${num}
    --dec, -d            Decrease volume by \${num}
EOF
}

case "$opt" in
    --togglemute|-tm)
        volume_togglemute
        ;;
    --inc|-i)
        volume_inc
        ;;
    --dec|-d)
        volume_dec
        ;;
    --help|-h) help_menu ;;
    *)
        echo "Error: '${opt:- }' Invalid option."
        help_menu
        exit 1
        ;;
esac
