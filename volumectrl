#!/bin/env bash

# Ensure pamixer is installed
if ! command -v pamixer &> /dev/null; then
    notify-send "Error: pamixer is not installed."
    exit 1
fi

# Validate volume increment/decrement value
if [[ "$2" =~ ^[0-9]+$ ]]; then
    num="$2"
else
    num=5  # Default volume step if not provided or invalid
fi

volume_inc() {
    pamixer -i "$num"
}

volume_dec() {
    pamixer -d "$num"
}

volume_togglemute() {
    pamixer --toggle-mute
}

volume_vol() {
    vol="$(pamixer --get-volume)"
    if [[ "$vol" -gt 0 && "$vol" -le 25 ]]; then
        echo "ðŸ”ˆ${vol}%"  # Low volume
    elif [[ "$vol" -gt 25 && "$vol" -le 50 ]]; then
        echo "ðŸ”‰${vol}%"  # Medium volume
    elif [[ "$vol" -gt 50 && "$vol" -lt 100 ]]; then
        echo "ðŸ”Š${vol}%"  # High volume
    elif [[ "$vol" -eq 100 ]]; then
        echo "ðŸ“¢${vol}%"  # Max volume
    else
        echo "ðŸ”‡"  # Muted or 0
    fi
}

case "$1" in
    --togglemute) volume_togglemute ;;
    --inc) volume_inc ;;
    --dec) volume_dec ;;
    --printvol) volume_vol ;;
    *)
        echo "Error: Unknown argument '$1'. Use --togglemute, --inc, --dec, or --printvol."
        exit 1
        ;;
esac
